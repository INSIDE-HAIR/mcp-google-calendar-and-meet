  "parameter_reference": {
    "create_meeting_parameters": {
      "required": {
        "summary": "string - Título de la reunión",
        "start_time": "string - Hora de inicio en formato ISO (ej: 2025-02-01T10:00:00Z)",
        "end_time": "string - Hora de fin en formato ISO (ej: 2025-02-01T11:00:00Z)"
      },
      "optional": {
        "description": "string - Descripción de la reunión",
        "attendees": "array[string] - Lista de emails de participantes",
        "co_hosts": "array[string] - Lista de emails de co-anfitriones",
        "enable_recording": "boolean - Habilitar grabación automática (requiere Google Workspace Business+)",
        "enable_transcription": "boolean - Habilitar transcripción automática",
        "enable_smart_notes": "boolean - Habilitar notas inteligentes con IA", 
        "attendance_report": "boolean - Generar reporte de asistencia",
        "space_config": {
          "moderation_mode": "string - 'ON' | 'OFF' - Habilitar moderación",
          "chat_restriction": "string - 'HOSTS_ONLY' | 'NO_RESTRICTION' - Restricción de chat",
          "present_restriction": "string - 'HOSTS_ONLY' | 'NO_RESTRICTION' - Restricción de presentación",
          "default_join_as_viewer": "boolean - Los participantes se unen como viewers por defecto"
        }
      }
    },
    
    "space_member_roles": {
      "COHOST": "Co-anfitrión con permisos completos de moderación",
      "MEMBER": "Miembro regular con permisos estándar", 
      "VIEWER": "Solo puede ver, sin permisos de participación"
    },
    
    "workspace_requirements": {
      "basic_features": "Google Account gratuita - Creación básica de reuniones",
      "recording_transcription": "Google Workspace Business Standard+ - Grabación y transcripción",
      "smart_notes": "Google Workspace Enterprise - Notas inteligentes con IA",
      "advanced_moderation": "Google Workspace Business+ - Controles avanzados de moderación"
    }
  },
  
  "quick_examples": {
    "simple_meeting": "create_meeting({ summary: 'Reunión Rápida', start_time: '2025-02-01T10:00:00Z', end_time: '2025-02-01T11:00:00Z' })",
    
    "meeting_with_recording": "create_meeting({ summary: 'Reunión Grabada', start_time: '2025-02-01T10:00:00Z', end_time: '2025-02-01T11:00:00Z', enable_recording: true })",
    
    "add_cohost": "add_space_members({ space_name: 'spaces/abc123', member_emails: ['cohost@empresa.com'], role: 'COHOST' })",
    
    "moderated_meeting": "create_meeting({ summary: 'Reunión Moderada', start_time: '2025-02-01T10:00:00Z', end_time: '2025-02-01T11:00:00Z', space_config: { moderation_mode: 'ON', chat_restriction: 'HOSTS_ONLY' } })"
